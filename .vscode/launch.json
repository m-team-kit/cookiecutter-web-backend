    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "autoapp:app",
                "--reload"
            ],
            "envFile": "${workspaceFolder}/.env",
            "jinja": false,
            "justMyCode": true
        },
        {
            "name": "Python: Alembic revision",
            "type": "python",
            "request": "launch",
            "module": "alembic",
            "args": [
                "revision",
                "--autogenerate",
                "-m",
                "\"${input:revisionMessage}\""
            ],
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
        },
        {
            "name": "Python: Alembic upgrade",
            "type": "python",
            "request": "launch",
            "module": "alembic",
            "args": [
                "upgrade",
                "head"
            ],
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true
        },
        {
            "name": "Python: Attach backend",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "revisionMessage",
            "type": "promptString",
            "description": "Revision message",
            "default": "standard"
        }
    ]
}